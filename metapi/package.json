{
  "name": "metapi",
  "version": "0.4.1",
  "description": "A client library for managing cross-userscript metasmoke integration, helping to keep the number of AJAX requests down.",
  "scripts": {
    "test": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Charcoal-SE/userscripts.git"
  },
  "author": "Charcoal",
  "license": "(MIT OR Apache-2.0)",
  "private": true,
  "bugs": {
    "url": "https://github.com/Charcoal-SE/userscripts/issues"
  },
  "homepage": "https://github.com/Charcoal-SE/userscripts#readme",
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "jquery"
    ],
    "rules": {
      "quotes": [0, "double", {"avoidEscape": true}],
      "camelcase": 1,
      "brace-style": 0,
      "no-prototype-builtins": 0,
      "dot-notation": 0,
      "linebreak-style": "off",
      "comma-dangle": "off",
      "no-eq-null": "off",
      "eqeqeq": ["error", "smart"],
      "unicorn/filename-case": "off"
    },
    "globals": [
      "metapi"
    ]
  }
}
