{
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "es6",
      "jquery",
      "greasemonkey"
    ],
    "rules": {
      "quotes": ["error", "single", {"avoidEscape": true}],
      "camelcase": 0,
      "max-params": ["warn", 5],
      "linebreak-style": "off",
      "curly": ["error", "multi-or-nest", "consistent"]
    },
    "globals": [
      "fire",
      "metapi",
      "toastr",
      "CHAT"
    ]
  }
}
